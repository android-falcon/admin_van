<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@color/layer7"
    tools:context=".ItemVisibility">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:elevation="5dp"
        android:background="@drawable/title_back"
        android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/layer7"
            android:text="@string/itemVisible"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:elevation="5dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/colorblue_dark"
        android:text="@string/sales_man_name"
        android:gravity="center|start"
        android:layout_weight="1.3"
        android:paddingLeft="2dp"
        android:textStyle="bold"
        android:paddingRight="2dp"
        android:textSize="14sp"
        />

    <Spinner
        android:id="@+id/salesNameSpinner"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:textSize="15sp"
        android:layout_weight="1"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:layout_marginStart="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="50dp">
        <Spinner
            android:id="@+id/visiblestateSpinner"
            android:layout_width="match_parent"
            android:padding="3dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_weight="4"

            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:layout_gravity="center"
            android:layout_marginStart="5dp" />
    <EditText
        android:id="@+id/customerSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"


        android:layout_weight="2"
        android:background="@drawable/hover_color"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:drawableTint="@color/colorblue_dark3"
        android:elevation="2dp"
        android:fontFamily="sans-serif-light"
        android:inputType="text"
        android:textColor="@color/darkGray"
        android:padding="1dp"
        android:hint="type Item Name ...."
        android:textColorHint="@color/lightWhite" />
    <TextView
        android:id="@+id/clearSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:padding="2dp"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_baseline_clear_24"

        android:text="@string/hide"
        android:textColor="@color/white"
        android:textStyle="bold"

        android:drawableLeft="@drawable/ic_baseline_clear_24" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorblue_dark"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="1dp"

        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"

            android:text="@string/hide"
            android:textColor="@color/white"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@color/colorblue1"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"

            android:text="@string/itemNo"
            android:textColor="@color/white"
            android:textStyle="bold"

            />


        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@color/colorblue1"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"

            android:text="@string/itemName"
            android:textColor="@color/white"
            android:textStyle="bold"

            />





    </TableRow>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_recycler"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:layout_margin="5dp"

        android:padding="7dp"
        android:elevation="5dp"
        android:background="@drawable/background_container" />
    <Button
        android:id="@+id/saveButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="0.2"
        android:background="@drawable/yellow_button"
        android:text="@string/save"
        android:textSize="15sp"
        android:elevation="5dp"
        android:textColor="@color/colorblue_dark"
        android:textStyle="bold" />

</LinearLayout>