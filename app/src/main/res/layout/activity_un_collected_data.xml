<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="2dp">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8.8"
                android:layout_marginBottom="5dp"

                android:orientation="horizontal"
                android:padding="2dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="2.9"
                    android:gravity="center"
                    android:textColor="@color/colorblue_dark"
                    android:text="@string/customerName"
                    android:autoSizeTextType="uniform"
                    android:textSize="13sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeMinTextSize="10sp"
                    android:textStyle="bold"

                    />
                <Spinner
                    android:id="@+id/cat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_weight="2.1"
                    android:textSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeMinTextSize="10sp"
                    android:gravity="center"
                    android:padding="3dp" />
                <Button
                    android:id="@+id/preview_button_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:textSize="13sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeMinTextSize="10sp"
                    android:background="@drawable/btn_login"
                    android:text="@string/preview"
                    android:textColor="@color/colorblue_dark" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8.8"
            android:layout_marginBottom="5dp"

            android:orientation="horizontal"
            android:padding="2dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/colorblue_dark"
                android:text="@string/search"
                android:autoSizeTextType="uniform"
                android:textSize="13sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="10sp"
                android:textStyle="bold"

                />
            <EditText
                android:id="@+id/listSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"

                android:layout_weight="1"
                android:background="@drawable/hover_color"
                android:drawableRight="@drawable/ic_search_black_24dp"
                android:drawableTint="@color/colorblue_dark3"
                android:elevation="2dp"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:padding="2dp"
                android:hint="type customer Name"
                android:textColorHint="@color/lightWhite" />
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_weight="8.8"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="9"
                    android:visibility="gone"
                    android:gravity="center"
                    android:padding="2dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:text="@string/PAIDAMT"

                    android:textColor="@color/colorblue_dark"
                    android:drawableStart="@drawable/ic_money_on_black_24dp"
                    android:autoSizeTextType="uniform"
                    android:textSize="13sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeMinTextSize="10sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_money_on_black_24dp" />
                <TextView
                    android:id="@+id/paidAmountText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_sighn_up"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/getAccountList_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_weight="1.5"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8.8"

                android:orientation="horizontal"
                android:padding="2dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/colorblue_dark"
                    android:autoSizeTextType="uniform"
                    android:textSize="13sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeMinTextSize="10sp"
                    android:textStyle="bold"
                    android:text="@string/recivedAmount"
                    android:drawableStart="@drawable/ic_money_on_black_24dp"

                    android:drawableLeft="@drawable/ic_money_on_black_24dp" />
                <TextView
                    android:id="@+id/recivedAmount_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_sighn_up"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="match_parent">
<!--                <HorizontalScrollView-->
<!--                    android:id="@+id/HorizontalScrollView01"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:fillViewport="true"-->
<!--                    android:scrollbars="horizontal"-->
<!--                    android:layout_height="match_parent"-->

<!--                    >-->

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:orientation="vertical"
                        android:layout_width="match_parent">
                        <!--    <LinearLayout-->
                        <!--        android:layout_width="match_parent"-->
                        <!--        android:layout_height="match_parent"-->
                        <!--        android:layout_marginLeft="5dp"-->
