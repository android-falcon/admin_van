                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10.5"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@color/colorblue_dark"
                            android:padding="2dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/app_bank_name"

                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_margin="10dp"
                                android:background="@color/colorblue1"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/check_number"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_margin="10dp"
                                android:background="@color/colorblue1"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/chaequeDate"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_margin="10dp"
                                android:background="@color/colorblue1"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/app_amount"
                                android:textColor="@color/white"
                                android:textStyle="bold" />


                        </TableRow>
                        <!--    </LinearLayout>-->

                        <RelativeLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_margin="2dp">
                            <TableLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/TableCheckData"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="@color/layer7">


                            </TableLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView_report"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:padding="2dp"
                                android:visibility="gone"
                                android:layout_margin="2dp"
                                android:background="@drawable/btn_sighn_up"

                                android:orientation="vertical"
                                >

                            </androidx.recyclerview.widget.RecyclerView>

                            <!--        <LinearLayout-->
                            <!--            android:layout_height="wrap_content"-->
                            <!--            android:layout_width="match_parent"-->
                            <!--            android:background="@color/colorblue_dark"-->
                            <!--            android:layout_alignBottom="@id/recyclerView_report"-->
                            <!--            android:orientation="horizontal">-->
                            <!--            <TextView android:layout_height="wrap_content"-->
                            <!--                android:layout_width="0dp"-->
                            <!--                android:layout_weight="2"-->
                            <!--                android:textStyle="bold"-->
                            <!--                android:gravity="center"-->
                            <!--                android:text="@string/total_balance"-->

                            <!--                android:textColor="@color/white"/>-->
                            <!--            <TextView-->
                            <!--                android:id="@+id/total_qty_text"-->
                            <!--                android:layout_height="wrap_content"-->
                            <!--                android:layout_width="0dp"-->
                            <!--                android:layout_weight="1"-->
                            <!--                android:textStyle="bold"-->
                            <!--                android:gravity="center"-->
                            <!--                android:text="00.00"-->

                            <!--                android:textColor="@color/white"/>-->
                            <!--        </LinearLayout>-->
                        </RelativeLayout>
                    </LinearLayout>
<!--                </HorizontalScrollView>-->


            </LinearLayout>


            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="9"

                android:visibility="gone"
                android:background="@color/colorblue_dark"
                android:layout_alignBottom="@id/recyclerView_report"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/total_balance"
                    android:textColor="@color/white"
                    android:textSize="14sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_qty_text"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="00.00"
                    android:textSize="14sp"

                    android:textColor="@color/white"/>
            </LinearLayout>
            <!--</ScrollView>-->
        </LinearLayout>
        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bmb_normalColor="@color/colorblue1"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:bmb_draggable="true"
            />
    </RelativeLayout>

</LinearLayout>