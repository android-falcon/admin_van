<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layBar"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center"
    android:padding="10dp"
    android:layout_weight="1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:gravity="start"
            android:text="JD"
            android:textColor="@color/colorblue_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:autoSizeMaxTextSize="25sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:id="@+id/AccType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:gravity="end"
            android:text="Join"
            android:layout_weight="1"
            android:textStyle="bold"

            android:textColor="@color/colorblue_dark"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:ignore="VectorDrawableCompat" />
        <!--</LinearLayout>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/sales_mancard_style"
        android:gravity="center"
android:id="@+id/salesLin"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgbar"
           android:layout_marginTop="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/profile"
            android:textColor="@color/white"
            tools:ignore="VectorDrawableCompat" />
<!--        <de.hdodenhof.circleimageview.CircleImageView-->
<!--            android:id="@+id/imgbar"-->
<!--            android:layout_width="70dp"-->
<!--            android:layout_height="70dp"-->
<!--            android:layout_weight="1"-->
<!--            android:gravity="center"-->
<!--            android:src="@drawable/ic_person_pin_yelow_24dp"-->
<!--            android:textColor="@color/white"-->
<!--            app:civ_border_width="1dp"-->
<!--            tools:ignore="VectorDrawableCompat" />-->

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Mohemmed Ali "
            android:textColor="@color/white"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>





</LinearLayout>

