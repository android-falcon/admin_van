<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@color/layer7"
    tools:context=".PlanSalesMan">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:elevation="5dp"
        android:background="@drawable/title_back"
        android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/layer7"
            android:text="@string/addCustomerLocation"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"


        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/updateLocationPosi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"

            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorblue_dark"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>
    <EditText
        android:id="@+id/customerSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"

        android:layout_weight="1"
        android:background="@drawable/hover_color"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:drawableTint="@color/colorblue_dark3"
        android:elevation="2dp"
        android:fontFamily="sans-serif-light"
        android:inputType="text"
        android:textColor="@color/darkGray"
        android:padding="1dp"
        android:hint="type customer Name"
        android:textColorHint="@color/lightWhite" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customer_recycler"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:layout_margin="10dp"

        android:padding="7dp"
        android:elevation="5dp"
        android:background="@drawable/background_container" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="300dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="0.2"
        android:background="@drawable/yellow_button"
        android:text="@string/save"
        android:textSize="15sp"
        android:elevation="5dp"
        android:textColor="@color/colorblue_dark"
        android:textStyle="bold" />

</LinearLayout>
