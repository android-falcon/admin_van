<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLinearDetail"

    android:background="@color/White2"
    android:textDirection="locale"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"

                        android:fontFamily="sans-serif-light"
                        android:padding="2dp"
                        android:text="@string/RequestDetail"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="18sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        app:fontFamily="sans-serif-smallcaps" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"

                    android:background="@drawable/container"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="@string/sales_man_name"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/Sales_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:text="Ahmed Mohemmed Ali"
                        android:padding="2dp"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/colorblue_dark"
                        android:textSize="14sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"

                    android:background="@drawable/container"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="@string/customerName"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="5"
                        android:fontFamily="serif"
                        android:text="Al Anhar company"
                        android:padding="2dp"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/colorblue_dark"
                        android:textSize="14sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/container"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="@string/requestType"
                        android:fontFamily="serif"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />



                        <TextView
                            android:id="@+id/requestType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:ems="5"
                            android:text="Total Discount"
                            android:inputType="numberDecimal"
                            android:padding="2dp"
                            android:textColor="@color/darkGray"
                            android:textSize="14sp"
                        />





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:id="@+id/amount_lin"
                    android:layout_weight="1"
                    android:background="@drawable/container"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="@string/amount_word"
                        android:fontFamily="serif"
                        android:textColor="@color/colorblue_dark"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="2dp"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />


                        <TextView
                            android:id="@+id/textAmountNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:ems="5"
                            android:text="25  % "

                            android:inputType="numberDecimal"
                            android:padding="2dp"
                            android:textColor="@color/colorblue_dark"
                            android:textSize="14sp"
                            app:autoSizeMaxTextSize="14sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:id="@+id/VouchernoLin"
                    android:layout_weight="1"
                    android:background="@drawable/container"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="@string/voucherNo"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp" />

                    <TextView
                        android:id="@+id/voucherNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:inputType="textPersonName"
                        android:padding="1dp"
                        android:textColor="@color/darkGray"
                        android:text="112540"
                        android:textSize="14sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:id="@+id/total_lin"
                    android:background="@drawable/container"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="@string/TotalVoucher"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp" />

                    <TextView
                        android:id="@+id/total_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:inputType="textPersonName"
                        android:padding="1dp"
                        android:textColor="@color/darkGray"
                        android:text="120.20   JD"
                        android:textSize="14sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/container"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1.3"

                        android:text="@string/date"
                        android:fontFamily="serif"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp" />

                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:ems="10"
                        android:padding="1dp"
                        android:fontFamily="serif"
                        android:lines="2"
                        android:text="29/11/2020"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/colorblue_dark"
                        android:textSize="14sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />
                    <TextView
                        android:id="@+id/textTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:ems="10"
                        android:padding="1dp"
                        android:fontFamily="serif"
                        android:lines="2"
                        android:text="4:30"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/colorblue_dark"
                        android:textSize="14sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/rowNote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/container"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/titleNote"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="@string/itemName"
                        android:fontFamily="serif"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp" />

                    <TextView
                        android:id="@+id/textnote"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:padding="3dp"
                        android:fontFamily="serif"
                        android:lines="2"
                        android:background="@drawable/white_and_yelow"
                        android:text=""
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/colorblue_dark"
                        android:textSize="14sp"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
android:id="@+id/showitemsLin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/container"

                    android:padding="5dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:id="@+id/showitems"
                        android:gravity="end"
                        android:text="@string/showitems"
                        android:fontFamily="serif"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp" />



                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:id="@+id/linearButtons"

                    android:gravity="center"
                    android:padding="5dp">


                    <Button
                        android:id="@+id/AcceptButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:background="@drawable/accept_btn"
                        android:padding="2dp"
                        android:text="@string/accept"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:elevation="2dp"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="14sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/RejectButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:background="@drawable/btn_login"
                        android:padding="2dp"
                        android:text="@string/Reject"
                        android:fontFamily="serif"
                        android:textColor="@color/colorblue_dark3"
                        android:textSize="18sp"
                        android:elevation="2dp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="12sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>