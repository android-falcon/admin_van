                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"

                    android:padding="5dp"

                    android:text="@string/credit"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:background="@drawable/white_and_blue"

                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/df"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"

                    android:padding="5dp"

                    android:text="@string/cf"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/totalDebit"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/totalCredit"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/TotalDebitF"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/TotalCreditF"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


