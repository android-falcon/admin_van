<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context=".Report.OfferseReport">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expotTpExcel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_weight="0"

            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_equalizer_black_24dp"
                android:drawableLeft="@drawable/ic_equalizer_black_24dp"
                android:drawablePadding="3dp"
                android:drawableTint="@color/colorblue_dark"
                android:padding="5dp"
                android:text="OffersReport"
                android:textColor="@color/colorblue_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/excelConvert"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0"
                android:background="@drawable/excel_e"
                android:drawablePadding="3dp"
                android:padding="5dp"
                android:textColor="@color/colorblue_dark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/pdfConvert"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0"
                android:background="@drawable/pdf_"
                android:drawablePadding="3dp"
                android:padding="5dp"
                android:textColor="@color/colorblue_dark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0"
                android:background="@drawable/ic_share_black_24dp"
                android:backgroundTint="@color/colorblue_dark"
                android:drawablePadding="3dp"
                android:padding="5dp"
                android:textColor="@color/colorblue_dark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="5dp"
        android:orientation="horizontal"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="0"
            android:gravity="center"
            android:text="@string/from_date"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/OFFERS_from_date_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/white_and_blue"
            android:focusable="false"
            android:gravity="center_vertical"
            android:inputType="date"
            android:padding="5dp"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="0"
            android:text="@string/to_date"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/OFFERS_to_date_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:inputType="date"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@drawable/white_and_blue"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp"  />



        <TextView
            android:layout_width="5dp"
            android:id="@+id/respon2"
            android:visibility="gone"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/row22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorblue_dark"
            android:text="@string/groupno"
            android:gravity="center|start"
            android:layout_weight=".7"
            android:textSize="12sp"
            />

        <Spinner
            android:id="@+id/GroupidSpinner"
            android:layout_width="120dp"
            android:padding="3dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:entries="@array/app_paymentTypeList"
            android:gravity="center"
            android:layout_marginStart="10dp" />
        <Button
            android:id="@+id/OFFERS_previewButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/yellow_button"
            android:textColor="@color/colorblue_dark"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="@string/preview"
            android:layout_marginLeft="5dp" />


    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorblue_dark"
        android:gravity="top"
        android:padding="3dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="@string/groupno"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/from_date"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:text="@string/to_date"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1.3"
            android:gravity="left"
            android:text="@string/Totaldec"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="@string/Activedes"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/yellow_button"
            android:text="update subitem"
            android:gravity="center"
            android:textSize="11sp"
            android:visibility="invisible"
          />

    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:padding="3dp"
        android:background="@color/darkWhite"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".3">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recycl"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </androidx.core.widget.NestedScrollView>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_gravity="center"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:visibility="invisible"
        android:layout_gravity="center"

     />
    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/yellow_button"
        android:textColor="@color/colorblue_dark"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:text="@string/save"
        android:layout_marginLeft="5dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center"
      android:visibility="invisible"
      />


</LinearLayout>

</LinearLayout>