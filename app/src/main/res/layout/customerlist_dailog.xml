<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="350dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@color/layer7"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btnSpeak"
            android:layout_width="match_parent"
            android:layout_weight="8.5"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:visibility="invisible"

            android:elevation="2dp"
            android:gravity="center" />
        <EditText
            android:id="@+id/customerNameTextView"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="@string/SearchByCustomerName"
            android:background="@drawable/back_border_edit"

            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_weight="8.5"
            android:layout_height="wrap_content"

            android:padding="2dp"

            android:background="@drawable/ic_refresh_black_24dp"

            android:textColor="@color/layer5" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/row6"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#76C4FF"
        android:orientation="horizontal"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="@string/app_cust_name"
         android:layout_gravity="center"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/customerNo"

            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/showloction"
            android:background="@drawable/ic_add_location_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:gravity="center"
            android:text="" />


    </LinearLayout>


    <ListView
        android:id="@+id/customersList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/layer7" />

</LinearLayout>