<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/White2">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Reports"
            app:drawableStartCompat="@drawable/chart"
            app:drawableLeftCompat="@drawable/chart"
            app:drawableTint="@color/colorblue1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans_bold"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/paymentReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_details_report"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="47dp"/>

        <TextView
            android:id="@+id/customerLogReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_log_report"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/cashReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cash_report"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/unCollectedChequesReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unCollectedCheques_report"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="11dp"
            android:layout_marginHorizontal="75dp"/>

        <TextView
            android:id="@+id/itemsReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itemReport"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/plansReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plans_report"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:id="@+id/RequestReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RequestReport"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/TargetReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TargetReport"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:id="@+id/CommissionTargetReport"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CommissionTargetReport"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans"
            android:textColor="@color/colorblue1"
            android:drawablePadding="5dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="40dp"/>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>