        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TableRow

            android:background="@color/white"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"


                android:gravity="center"
                android:text="@string/app_cash_report"
                android:textColor="@color/colorblue_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

    <TableRow

        android:background="@color/white"
        android:layout_marginTop="3dp">
<TextView
    android:id="@+id/Respons"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/from_date"
            android:textColor="@color/text_view_color"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/date_editReport_cash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/border_dark_blue"
            android:inputType="date"
            android:gravity="center"
            android:textSize="12sp"
            app:drawableEndCompat="@drawable/calendar"
            app:drawableRightCompat="@drawable/calendar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/to_date"
            android:textColor="@color/text_view_color"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/TOdate_editReport_cash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/border_dark_blue"
            android:inputType="date"
            android:textSize="12sp"
            android:gravity="center"
            app:drawableEndCompat="@drawable/calendar"
            app:drawableRightCompat="@drawable/calendar" />


        <Button
                android:id="@+id/preview_cash_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="2dp"
                android:background="@drawable/done_button"
                android:text="@string/preview"
                android:textColor="@color/white"
                android:textSize="14sp" />


    </TableRow>



        <TableRow

