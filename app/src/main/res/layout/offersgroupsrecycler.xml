<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"

android:id="@+id/grouplin"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@color/colorblue2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/groupnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/darkWhite"
            android:textSize="12sp"
             />

        <TextView
            android:id="@+id/fromdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1.2"
            android:gravity="left"
            android:background="@drawable/background_container"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp"
            />

<TextView
    android:layout_width="5dp"
    android:layout_height="wrap_content"
/>
        <TextView
            android:layout_width="5dp"
            android:id="@+id/respon"
            android:visibility="gone"
            android:layout_height="wrap_content"
            />
       <TextView
            android:id="@+id/todate"
            android:background="@drawable/background_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1.2"
            android:gravity="left"
            android:textSize="12sp"
            android:textColor="@color/colorblue_dark"
          />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/totalDec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1.3"
            android:textFontWeight="10"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"

            android:background="@drawable/background_container"
            android:inputType="number"
            android:textColor="@color/colorblue_dark3"
            android:textSize="12sp" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            />
<ToggleButton
    android:layout_width="match_parent"
    android:background="@drawable/togglebtn"
    android:layout_height="20dp"
    android:layout_weight="1.3"
    android:textColor="@color/gray"

    android:id="@+id/activestate">

</ToggleButton>

<TextView
    android:layout_width="30dp"
    android:layout_height="wrap_content"
android:id="@+id/dropdown"
    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_circle_24"
    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_circle_24">

</TextView>
        android:layout_weight="1"

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/memeber"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>