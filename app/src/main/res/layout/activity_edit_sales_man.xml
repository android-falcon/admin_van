<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditSalesMan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/activate_button"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/activite_bac_button"
            android:drawableStart="@drawable/ic_person_add_black_24dp"
            android:drawableLeft="@drawable/ic_person_add_black_24dp"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="@string/add_van_sales"
            android:textColor="@color/colorblue_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_person_add_black_24dp"
            android:drawableLeft="@drawable/ic_person_add_black_24dp"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:visibility="invisible"
            android:text="@string/addAdmin"
            android:textColor="@color/colorblue_dark3"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/white_and_yelow"
        android:padding="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_weight="0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/user_no"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/salesNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/card_layout"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="00000"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/userName"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/salesName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_and_yelow"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/password"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_and_yelow"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="5dp"
                    android:text="@string/voucherSerial"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/FVserial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_and_yelow"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="From Serial"
                    android:inputType="number"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/TVserial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_and_yelow"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="To Serial"
                    android:inputType="number"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="5dp"
                    android:text="@string/returnSerial"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/FRserial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_and_yelow"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="From serial"
                    android:inputType="number"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/TRserial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_and_yelow"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="To Serial"
                    android:inputType="number"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="5dp"
                    android:text="@string/paymentSerial"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/FstockSerial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_and_yelow"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="From serial"
                    android:inputType="number"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/TstockSerial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_and_yelow"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="To Serial"
                    android:inputType="number"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <CheckBox
                    android:id="@+id/ActiveCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/Active"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0"
                    android:drawableStart="@drawable/ic_delete_black_24dp"
                    android:drawableLeft="@drawable/ic_delete_black_24dp"
                    android:drawableTint="@color/colorblue_dark3"
                    android:padding="5dp"
                    android:text="clear"
                    android:textColor="@color/colorblue_dark" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/validityLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_and_yelow"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/Validity"
                    android:textColor="@color/colorblue_dark"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/AllChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:text="ALL"
                    android:textColor="@color/colorblue_dark3" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/white_and_yelow"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/AddSalesCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Sales Men" />

                        <CheckBox
                            android:id="@+id/AddAdminCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Admin" />

                        <CheckBox
                            android:id="@+id/makeOfferCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Make Offer" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/offerReportCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Offer Report" />

                        <CheckBox
                            android:id="@+id/accountRCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Account Report" />

                        <CheckBox
                            android:id="@+id/paymentRCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_details_report" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/CustomerCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/customer_log_report" />

                        <CheckBox
                            android:id="@+id/CashRCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cash_report" />

                        <CheckBox
                            android:id="@+id/LocationCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sales Men Location " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/UncollectedRCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/unCollectedCheques_report" />

                        <CheckBox
                            android:id="@+id/analyzeRCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/AnalyzeCustomersAccount" />

                        <CheckBox
                            android:id="@+id/LogHistoryRCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/log_history_report" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_and_blue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_back_table"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/searchSalesMan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_btn"
                        android:drawableStart="@drawable/ic_search_black_24dp"
                        android:drawableLeft="@drawable/ic_search_black_24dp"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:hint="@android:string/search_go"
                        android:padding="2dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="14dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_btn"
                        android:drawableStart="@drawable/ic_search_black_24dp"
                        android:drawableLeft="@drawable/ic_search_black_24dp"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:hint="@android:string/search_go"
                        android:padding="2dp"
                        android:textColorHint="@color/colorblue_dark"
                        android:textSize="14dp"
                        android:visibility="invisible" />
                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/user_no"
                        android:textColor="@color/darkWhite"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/userName"
                        android:textColor="@color/darkWhite"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/password"
                        android:textColor="@color/darkWhite"
                        android:textStyle="bold" />
                </TableRow>

            </LinearLayout>

            <ListView
                android:id="@+id/salesManList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/yellow_button"
                android:text="Add"
                android:textColor="@color/colorblue_dark"
                android:textStyle="bold" />

            <Button
                android:id="@+id/updateButton"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/blue_back"
                android:text="Update"
                android:textColor="@color/darkOrange2" />

            <!--<Button-->
            <!--android:id="@+id/button3"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginHorizontal="5dp"-->
            <!--android:textColor="@color/white"-->
            <!--android:background="@drawable/red_button"-->
            <!--android:text="@string/dialog_cancel" />-->
        </LinearLayout>


    </LinearLayout>
</LinearLayout>