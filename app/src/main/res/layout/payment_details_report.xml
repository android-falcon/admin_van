                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:padding="5dp"

                    android:text="@string/sales_man_name"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
