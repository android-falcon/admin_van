<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="locale"
    android:id="@+id/linearMain"
    android:padding="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_equalizer_black_24dp"
            android:drawableLeft="@drawable/ic_equalizer_black_24dp"
            android:drawablePadding="3dp"
            android:drawableTint="@color/colorblue_dark"
            android:padding="5dp"
            android:text="@string/payment_details_report"
            android:textColor="@color/colorblue_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/excelConvert"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/excel_e"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:textColor="@color/colorblue_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pdfConvert"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/pdf_"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:textColor="@color/colorblue_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/ic_share_black_24dp"
            android:drawablePadding="3dp"
            android:backgroundTint="@color/colorblue_dark"
            android:padding="5dp"
            android:textColor="@color/colorblue_dark"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="5dp"
        android:orientation="horizontal"
      >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="0"
            android:gravity="center"
            android:text="@string/from_date"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/from_date_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:inputType="date"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@drawable/white_and_blue"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="0"
            android:text="@string/to_date"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/to_date_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:inputType="date"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@drawable/white_and_blue"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp"  />

        <Button
            android:id="@+id/previewButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/yellow_button"
            android:textColor="@color/colorblue_dark"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="@string/preview"
            android:layout_marginLeft="5dp" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/row22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorblue_dark"
            android:text="@string/app_paymentType"
            android:gravity="center|start"
            android:layout_weight="1"
            android:textSize="12sp"
         />

        <Spinner
            android:id="@+id/payKindSpinner"
            android:layout_width="120dp"
            android:padding="3dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:entries="@array/app_paymentTypeList"
            android:gravity="center"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorblue_dark"
            android:text="@string/sales_man_name"
            android:gravity="center|start"
            android:layout_weight="1"
            android:textSize="12sp"
            />

        <Spinner
            android:id="@+id/salesNameSpinner"
            android:layout_width="120dp"
            android:padding="3dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:entries="@array/app_paymentTypeList"
            android:gravity="center"
            android:layout_marginStart="10dp" />


    </LinearLayout>
    <HorizontalScrollView
