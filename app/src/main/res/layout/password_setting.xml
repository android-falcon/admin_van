<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/PassowrdSetting"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            android:textColor="@color/colorblue_dark"
            android:drawablePadding="5dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_settings_black_24dp" />
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="5dp"

            android:drawableStart="@drawable/ic_close_black_24dp"
            android:textColor="@color/colorblue_dark"
            android:drawablePadding="5dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_close_black_24dp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/password"
            android:textColor="@color/colorblue_dark"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/passowrdEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_and_yelow"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/colorblue_dark"
            android:textSize="16sp" />
    </TableRow>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yellow_button"
            android:textColor="@color/colorblue_dark"
            android:textStyle="bold"
            android:layout_marginRight="3dp"
            android:elevation="5dp"
            android:text="Save" />


    </LinearLayout>
</LinearLayout>