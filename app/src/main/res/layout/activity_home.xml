            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:visibility="invisible"
            android:background="@drawable/btn_login"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:elevation="5dp"
            android:padding="5dp"
            android:text="Sales Man Location"
            android:textColor="@color/colorblue_dark" />
        <Button
            android:id="@+id/addPlan_Sales_man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:visibility="visible"
            android:background="@drawable/btn_login"
            android:drawableStart="@drawable/ic_baseline_reorder_24"
            android:drawableLeft="@drawable/ic_baseline_reorder_24"
            android:elevation="5dp"
            android:padding="5dp"
            android:text="Sales Man Plan"
            android:textColor="@color/colorblue_dark" />
        <Button
            android:id="@+id/group_offerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/btn_login"
            android:drawableStart="@drawable/ic_local_offer_black_24dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:elevation="5dp"
            android:visibility="gone"
            android:padding="5dp"
            android:text="Offer Group"
            android:textColor="@color/colorblue_dark" />


