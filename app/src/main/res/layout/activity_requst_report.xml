<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearMain"
    android:background="@color/layer7"
    tools:context=".Report.RequstReport">
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans"
            android:text="@string/name"
            android:textColor="#103164"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/salesManSpinner"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/padd_10"
            android:layout_marginLeft="@dimen/padd_10"
            android:layout_weight="0.4"
            android:background="@drawable/spinner_bg"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/gray" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/previewButton"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/padd_10"
            android:layout_marginLeft="@dimen/padd_10"
            android:layout_weight="0.4"
            android:background="@drawable/yellow_btn"
            android:fontFamily="@font/alegreya_sans_bold"
            android:text="@string/preview"
            android:textAllCaps="false"
            android:textColor="@color/new_dark_blue"
            android:textSize="16sp" />

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="6"
        android:visibility="gone"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="@color/White2"
        app:cardCornerRadius="20dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/res"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        app:spanCount="1"
        android:layout_weight="1"
        tools:listitem="@layout/raw_account_chooser" />

</LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="4.9"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="@color/White2"
        app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.9"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/White2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:text="@string/sales_man_name"
                android:fontFamily="@font/alegreya_sans"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="#103164"
                android:textSize="18sp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/sales_man_name1"
                android:fontFamily="@font/alegreya_sans"
                android:layout_weight="1"

                android:textColor="#103164"
                android:textSize="18sp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/alegreya_sans"
                android:text="@string/date"
                android:layout_weight="1"
                android:textColor="#103164"
                android:gravity="start"
                android:textSize="18sp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/date"
                android:fontFamily="@font/alegreya_sans"
                android:layout_weight="1"
                android:textColor="#103164"
                android:textSize="18sp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:background="@drawable/blue_btn"
            android:padding="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/itemName"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/itemNo"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Request_qty"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="@string/ApprovedQuantity"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
android:id="@+id/acceptAll"
                android:text="@string/ApprovedStatus"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/RecLayout"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/Res"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="18"

        android:layout_height="match_parent"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveButton1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/borderbtn2"
            android:text="@string/save"
            android:textSize="15sp"
            android:elevation="5dp"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/borders_btn"
            android:text="@string/cancel"
            android:textSize="15sp"
            android:elevation="5dp"
            android:textColor="@color/colorblue1"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/exportrespon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/UpdateRespon"/>

    </LinearLayout>
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_nav_bar"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/requstsRespon"
        android:fontFamily="@font/alegreya_sans"
      android:visibility="gone"
        android:gravity="start"
        android:textColor="#103164"
        android:textSize="18sp"
        android:layout_height="match_parent"/>
</LinearLayout>